<!DOCTYPE html>
<html>
<head>
  <title>FacebookOnRails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% flash.each do |name, msg| %> 
    <div class="alert text-center alert-<%= name.to_s == 'notice' ? 'success' : 'error' %>">   
      <a class="close" data-dismiss="alert">x</a>   <%= content_tag :div, msg, :id => "flash_#{name}" %> 
    </div> 
  <% end %>
  <br style="">
  <%= render 'layouts/header' %>
  <%= yield %>

</body>
</html>
